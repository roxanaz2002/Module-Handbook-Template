% 1. (Course Information)
\newcommand{\courseinfo}[4]{
    \subsubsection*{1. Course Information}
    \begin{center}
        \begin{tabular}{|c|c|c|c|}
            \hline
            \textbf{Course Name} & #1 & \textbf{Course Code} & #2 \\ \hline
            \textbf{Credit} & #3 & \textbf{Academic Hours} & #4 \\ \hline
        \end{tabular}
    \end{center}
    %\vspace{0.5cm}
}

% 2. (Objects)
\newcommand{\objects}[1]{
    \subsubsection*{2. Objects}
    #1
}

% 3. (Course Content and Schedule)
\newcommand{\courseschedule}[1]{
    \subsubsection*{3. Course Content and Schedule}
    \begin{longtable}{|c|p{3cm}|p{7.5cm}|c|}
        % 不要随意使用{|c|c|c|c|} 
        \hline
        \textbf{Week} & \textbf{Chapter / Title} & \textbf{Content} & \textbf{Academic Hours} \\ \hline
        #1\\
        \hline
    \end{longtable}
}

% 4. (Grading Policy)
\newcommand{\gradingpolicy}[6]{
    \subsubsection*{4. Grading Policy}
    \begin{center}
        \begin{tabular}{|l|c|l|c|}
            \hline
            \textbf{Assessment Item} & \textbf{Percentage} & \textbf{Assessment Item} & \textbf{Percentage} \\ \hline
            Class Performance & #1 & Homework & #2 \\ \hline
            Attendance & #3 & Midterm Exam & #4 \\ \hline
            Final Exam & #5 & Project & #6\\ \hline
        \end{tabular}
    \end{center}
}

% 5. (Textbooks)
